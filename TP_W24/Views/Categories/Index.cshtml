                            <a href='/home/post'><h3 style="float: left;margin-left: 20px;">@item.CategorieName</h3></a>
                        </div>
                        </article>*@
                        
                        <article class="col-md-3 col-sm-6 col-xs-12 clearfix wow fadeInUp" data-wow-duration="500ms">
                            <div style="margin-top:7%;" class="note">
                                <div class="media-wrapper">
                                    <img style="width:260.5px;height:173.66px;" src="@item.Categorie_Path_Img" alt="amazing caves coverimage" class="img-responsive">
                                </div>

                                <div class="excerpt">
                                    <h3>@item.CategorieName</h3>
                                    <p>@item.CategorieDescription</p>
                                    <a class="btn btn-transparent" href='/Posts/Index?NoCat=@item.Categorie_ID'>Go</a>
                                </div>
                            </div>
                        </article>
						
                    }
                         
                        </div>
                      </div>

                        
                            <!-- Widget Section -->
                            <div id="right-sidebar" class="col-md-4 col-sm-4">

                                <!------------------------------Recherche ----------------------------->
                                <aside class="widget wow fadeInUp" data-wow-duration="1000ms">
                                    <div class="widget-title">
                                        <h3>Rechercher</h3>
                                    </div>
                                    <div class="widget-content">
                                        <form action="#" id="search-form" method="get" role="search">
                                            <input type="text" class="form-control" placeholder="Recherche..." autocomplete="on" name="seach">
                                            <button type="submit" title="Search" id="search-submit">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </form>
                                    </div>
                                </aside>
                        <!------------------------- Fin Recherche ----------------------------->
