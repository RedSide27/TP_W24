@model IEnumerable<TP_W24.Models.Categorie>

@{
    ViewBag.Title = "Index";
}

<!-- Start Blog Banner
        ==================================== -->
<section id="blog-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">

                <div class="blog-icon">
                    <i class="fa fa-btc fa-4x"></i>
                </div>
                <div class="blog-title">
                    <h1>Catégories</h1>
                </div>

            </div>     <!-- End col-lg-12 -->
        </div>	    <!-- End row -->
    </div>       <!-- End container -->
</section>    <!-- End Section -->
<!-- Start Blog Post Section
==================================== -->

<section id="blog-page">
    <div class="container">
        <div class="row">
            <div id="blog-posts" class="col-md-8 col-sm-8">
                <div class="post-item">
                    @foreach (var item in Model)
                    {
                    @*<article class="entry wow fadeInDown" data-wow-duration="1000ms" data-wow-delay="300ms">
