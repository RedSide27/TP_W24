@model TP_W24.Models.Categorie

@{
    ViewBag.Title = "Edit";
}

<section id="blog-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="blog-icon">
                    <i class="fa fa-btc fa-4x"></i>
                </div>
                <div class="blog-title">
                    <h1>Modifier</h1>
                </div>

            </div>     <!-- End col-lg-12 -->
        </div>	    <!-- End row -->
    </div>       <!-- End container -->
</section>


@using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <input type="hidden" value="@ViewBag.ImgPath" name="ImgPath" />
    <input type="hidden" value="@ViewBag.ImgID" name="ImgID" />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <center><h4>Nom De Catégories</h4></center>
            <div class="col-md-8 col-md-offset-2">
                @Html.EditorFor(model => model.CategorieName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategorieName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h4 class="control-label col-md-2">Description de la Catégorie</h4>
            <div class="col-md-8">
                @Html.TextAreaFor(model => model.CategorieDescription, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategorieDescription, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-offset-2 col-md-10">
            <label for="file">Changer l'Image:</label>
            <input type="file" value="@ViewBag.ImgPath" name="fileIMG" id="file" /><br><br>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
